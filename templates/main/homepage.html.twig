{% extends 'base.html.twig' %}

{% block title %}Sfcast: Beam up some parts! {% endblock %}

{% block body %}
<h1>Sfcast: your monopoly-busting option for spaceship parts!'</h1>

<div>
    Browse through {{numberOfStarships}} starships!

    {% if numberOfStarships > 400 %}
        <p>That's a load of starships!!</p>
    {% endif %}
</div>

<div>
    <h2>
        <table>
            <tr>
                <th>Name</th>
                <td>{{myShip.name}}</td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{myShip.class}}</td>
            </tr>
            <tr>
                <th>Captain</th>
                <td>{{myShip.captain}}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{myShip.status}}</td>
            </tr>
        </table>
    </h2>
</div>

{% endblock %}